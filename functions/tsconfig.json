{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2018",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src",
    ".eslintrc.js",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
}